<!DOCTYPE html>
<html>
  <head>
    <title>Honeydukes</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <ul class="nav">
      <li>@Html.ActionLink("Home", "Index", "Home")</li>
      <li>@Html.ActionLink("Flavours", "Index", "Flavors")</li>
      <li>@Html.ActionLink("Treats", "Index", "Treats")</li>
      @if (User.Identity.IsAuthenticated)
      {
        <div class="nav-greeting">
          @using (Html.BeginForm("LogOff", "Account"))
          {
            <li><input type="submit" value="Log out" class="btn navbtn"/></li>
          }
          <li class="hello">Welcome @User.Identity.Name!</li>
        </div>
      }
      else
      {
        <li class="hello">Greetings Muggle!</li>
      }
    </ul>
    <div class="box">
      @RenderBody()
    </div>
  </body>
</html>