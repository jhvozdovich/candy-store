@{
  Layout = "_Layout";
}

@using Honeydukes.Models
@model List<Honeydukes.Models.Flavor>

<h1>Flavours</h1>

@if(@Model.Count == 0)
{
  <p>No flavours have been entered! Accio flavours!</p>
}

@foreach (Flavor flavor in Model)
{
  <p>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</p>
}

<button>@Html.ActionLink("Accio Flavor", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>